<!--    Pin view style-->
    <style name="customPinViewStyle">
        <item name="cursorColor">@color/text_title_color</item>
        <item name="cursorWidth">2dp</item>
        <item name="hideLineWhenFilled">false</item>
        <item name="android:editable">true</item>
        <item name="itemCount">4</item>
        <item name="itemHeight">?actionBarSize</item>
        <item name="itemRadius">8dp</item>
        <item name="itemSpacing">@dimen/_12sdp</item>
        <item name="itemWidth">?actionBarSize</item>
        <item name="lineColor">@drawable/pin_view_state_selected</item>
        <item name="lineWidth">2dp</item>
        <item name="viewType">rectangle</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:itemBackground">@drawable/et_border_item_bg</item>

    </style>
